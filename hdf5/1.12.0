#%Module2.0

conflict gcc-cross-aarch64
conflict hdf5/1.8.13
proc ModulesHelp { } {
    puts stderr "This is [module-info name] with parallel HDF5 support built with openmpi" 
}

set _module_name  [module-info name]
set is_module_rm  [module-info mode remove]
set sys        [uname sysname]
set os         [uname release]
set curMod [module-info name]

if {[module-info mode load]} {
    puts stderr "Loading '$curMod' [uname sysname]."
}

if {[module-info mode remove]} {
    puts stderr "Removing '$curMod' [uname sysname]."
}

set              HDF5_ROOT /lus/theta-fs0/software/thetagpu/hdf5/1.12.0/
setenv           HDF5_ROOT $HDF5_ROOT
setenv	 	 HDF5_DIR $HDF5_ROOT

prepend-path	 PATH ${HDF5_ROOT}/bin
prepend-path	 CPATH ${HDF5_ROOT}/include
prepend-path     LD_LIBRARY_PATH ${HDF5_ROOT}/lib
